{
  "name": "notes-app-nestjs",
  "version": "0.0.1",
  "description": "Just a small notes app",
  "author": "Binar Nugroho <binarnugroho775@gmail.com>",
  "private": true,
  "repository": "https://github.com/binarstrike/notes-app-nestjs.git",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "dotenv -e .env.development -- nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prisma:push": "prisma db push",
    "prisma:push:test": "dotenv -e .env.test -- prisma db push",
    "prisma:push:dev": "dotenv -e .env.development -- prisma db push",
    "db:up:dev": "docker compose --env-file .env.development up dev_db -d",
    "db:remove:dev": "docker compose --env-file .env.development rm dev_db -s -f -v",
    "db:restart:dev": "pnpm db:remove:dev && pnpm db:up:dev && timeout 10 || sleep 10 && pnpm prisma:push:dev",
    "db:up:test": "docker compose --env-file .env.test up test_db -d",
    "db:remove:test": "docker compose --env-file .env.test rm test_db -s -f -v",
    "db:restart:test": "pnpm db:remove:test && pnpm db:up:test && timeout 10 || sleep 10 && pnpm prisma:push:test",
    "pretest:e2e": "pnpm db:restart:test",
    "test:e2e": "dotenv -e .env.test -- jest --watch --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^4.16.1",
    "argon2": "^0.30.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "pactum": "^3.4.1",
    "prettier": "^2.8.8",
    "prisma": "^4.16.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
